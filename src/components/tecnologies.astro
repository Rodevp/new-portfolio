---

const {  tecnologies } = Astro.props

---

<div class="tecnologies">
    {
        tecnologies.map( ( tecnologie: any ) => (
            <picture>
                <img  src={tecnologie.url} alt={tecnologie.alt} />    
            </picture>
        ))
    }
</div>

<style>
    .tecnologies {
        margin-bottom: 0.75rem;
        display: flex;
        justify-content: flex-start;
    }

    .tecnologies picture {
        width: 25px;
        height: 25px;
        margin-right: 5px;
        background-color: aqua;
    }

</style>