---
    interface Props {
        url: string
        alt: string
    }

    const { url, alt } = Astro.props

---

<picture  class="picture">
    <img   src={url}  alt={alt}  loading="lazy"  />
</picture>

<style>
    .picture {
        width: 8rem;
        height: 8rem;
        margin-left: auto;
        margin-right: auto;
        margin-top: 1.5rem;
        border-radius: 9999px;
    }

    .picture img {
        border-radius: 9999px;
    }

</style>