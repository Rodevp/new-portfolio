---
import Profile from "../assets/perfil.jpg"
---

<picture  class="picture">
    <img   src={Profile}  alt="my photo"  loading="lazy"  />
</picture>

<style>
    .picture {
        width: 8rem;
        height: 8rem;
        margin-left: auto;
        margin-right: auto;
        border-radius: 9999px;
    }

    .picture img {
        border-radius: 9999px;
    }

    @media screen and (min-width: 768px) {
        .picture {
            width: 12rem;
            height: 12rem;
        }
    }

</style>